@page
@model Presentacion.Pages.Autenticacion.JoinInModel
@{
}


<body>
    <div class="login-box col-4 offset-md-4">    
        <h1 class="text-center">Registrate</h1>
        <form method="post" action="">
            <input type="hidden" asp-for="Usuario.Id" />
            
            <div class="form-group">
                <label asp-for="Usuario.User"></label>
                <input asp-for="Usuario.User" class="form-control">
                <span asp-validation-for="Usuario.User" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Usuario.Contrasena"></label>
                <input asp-for="Usuario.Contrasena" class="form-control" type = "password" input = "password" >
                <span asp-validation-for="Usuario.Contrasena" class="text-danger"></span>
            </div>

            <div class="form-group">
                <strong><label asp-for="Usuario.Correo">Email</label></strong>
                <input asp-for="Usuario.Correo" class="form-control">
                <span class="text-danger" asp-validation-for="Usuario.Correo"></span>
            </div>
            

            <div class="form-group">
                <label asp-for="Usuario.Rol" class="control-label"></label>
                    <select asp-for="Usuario.Rol" class="form-control" >
                    <option value="">--Seleccione Rol-- </option>
                    <option value="Administrador">Administrador</option>
                    <option value="Migrante">Migrante</option>
                    <option value="GerenteProyecto">Gerente de Proyecto</option>
                    <option value="UsuarioEntidad">Usuario de Entidad Colaboradora</option>
                </select>
            </div>

            <div class="form-group">
                <input class= "btn btn-primary btn-block" type="submit" value="JoinIn">
            </div>
        </form>
    </div>
</body>
