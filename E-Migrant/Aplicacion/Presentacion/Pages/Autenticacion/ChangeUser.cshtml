@page
@model Presentacion.Pages.Autenticacion.ChangeUserModel
@{
}
<body>
    <div class="login-box col-4 offset-md-4">    
        <h1 class="text-center">Cambia tu Usuario</h1>
        <form method="post" action="">
            <div class="form-group">
                <label>Nuevo Usuario</label>
                <input class="form-control" class="text-danger" asp-for="NewUsuario">
            </div>
            <div class="form-group">
                <label>Confirmar nuevo Usuario</label>
                <input class="form-control" class="text-danger" asp-for="NewUsuarioConfirm">
            </div>

            <div class="form-group">
                <label>Correo</label>
                <input class="form-control" class="email" asp-for="Mail">
            </div>

            <div class="form-group">
                <label>Contraseña</label>
                <input class="form-control" type="password" asp-for="Password">
            </div>
            <div class="form-group">
                <input class= "btn btn-primary btn-block" type="submit" value="Cambiar Contrsena">
            </div>
    </form>
</body>