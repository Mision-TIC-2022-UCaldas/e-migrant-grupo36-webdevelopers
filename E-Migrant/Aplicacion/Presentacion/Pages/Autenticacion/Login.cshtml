@page
@model Presentacion.Pages.Autenticacion.LoginModel
@{
}

<body>
    <div class="login-box col-4 offset-md-4">    
        <h1 class="text-center">Ingresa</h1>
        <form method="post" action="">
            <div class="form-group">
                <label>Usuario</label>
                <input class="form-control" type="text" asp-for="Username">
            </div>

            <div class="form-group">
                <label>Correo</label>
                <input class="form-control" type="email" asp-for="Mail">
            </div>

            <div class="form-group">
                <label>Contraseña</label>
                <input class="form-control" type="password" asp-for="Password">
                <span class = "text-danger">@Model.MensajePassword</span>
            </div>
            <div class="form-group">
                <input class= "btn btn-primary btn-block" type="submit" value="Ingresar">
            </div>
            <div>
                <a asp-page="ChangePassword">Olvide mi contraseña</a>
            </div>
            <div>
                <a asp-page="ChangeUser">Olvide mi Usuario</a>
            </div>
            <div>
                <a asp-page="ResetAcount">Restablecer mis credenciales</a>
            </div>
            <div>
                <a asp-page="JoinIn">Registrarme</a>
            </div>
        </form>
    </div>
</body>
