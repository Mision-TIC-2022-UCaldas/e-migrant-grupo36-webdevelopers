@page
@model Presentacion.Pages.Ofertas.EditarModel
@{ViewData["Title"]="Editar Oferta";
}
<h1>Editar </h1>
<h4>Migrante</h4>

<div class="form-horizontal">
        
        <hr />
        
        <div class="row">
           <div class="col-md-4">
               <form method="post">
                  
                   <input type="hidden" asp-for="Oferta.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
                   <div class="form-group">
                       <label asp-for="Oferta.Nombre" class="control-label"> </label>
                       <input asp-for="Oferta.Nombre"  class="form-control" />   
                       <span asp-validation-for="Oferta.Nombre" class="text-danger" > </span>                       
                   </div>


                   <div class="form-group">
                       <label asp-for="Oferta.MaxMigrantes" class="control-label"> </label>
                       <input asp-for="Oferta.MaxMigrantes"  class="form-control" />   
                       <span asp-validation-for="Oferta.MaxMigrantes" class="text-danger" > </span>                       
                   </div>


                    
                   <div class="form-group">
                       <label asp-for="Oferta.FechaInicio" class="control-label"> </label>
                       <input asp-for="Oferta.FechaInicio"  class="form-control" />   
                       <span asp-validation-for="Oferta.FechaInicio" class="text-danger" > </span>                       
                   </div> 


                   <div class="form-group">
                       <label asp-for="Oferta.FechaFinal" class="control-label"> </label>
                       <input asp-for="Oferta.FechaFinal"  class="form-control" />   
                       <span asp-validation-for="Oferta.FechaFinal" class="text-danger" > </span>                       
                   </div>
              

                
                <div class="form-group">
                    <label asp-for="Oferta.Estado" class="control-label"></label>
                     <select asp-for="Oferta.Estado" class="form-control" >
                        <option value="">--Seleccione estado-- </option>
                        <option value="Activo">Activo</option>
                        <option value="Cerrado">Cerrado</option>
                        <option value="Con cupo">Con cupo</option>
                        <option value="Sin cupo">Sin cupo</option>
                        
                    </select>
                </div>


                


                    

                  
                   
                   <div class="form-group">                       
                       <input type="submit" value="Editar" class="btn btn-primary"/>                       
                   </div>
               </form>
           </div>
        </div>

        <div>
            <a asp-page="Index">Regresar a Migrantes</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

