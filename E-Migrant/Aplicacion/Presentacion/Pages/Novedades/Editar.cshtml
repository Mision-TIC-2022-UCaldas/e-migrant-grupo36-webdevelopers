@page
@model Presentacion.Pages.Novedades.EditarModel
@{
    ViewData["Title"] = "Editar Novedades";
}

<h1>Editar </h1>
<h4>Novedades</h4>

<div class="form-horizontal">
    <hr />
    <div class="row">
        <div class=col-md-4>
            <form method="post">

                <input type="hidden" asp-for="Novedad.Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

                @* Campo fecha novedad *@
                <div class="form-group">
                       <label asp-for="Novedad.FechaNovedad" class="control-label"> </label>
                       <input asp-for="Novedad.FechaNovedad"  class="form-control" />   
                       <span asp-validation-for="Novedad.FechaNovedad" class="text-danger" > </span>                       
                   </div>
                @* Campo solicitud dias activo *@
                <div class="form-group">
                    <label asp-for="Novedad.TextoExplicacion" class="control-label"> </label>
                    <input asp-for="Novedad.NumDiasActivo" class="form-control" />
                    <span asp-validation-for="Novedad.NumDiasActivo" class="text-danger"></span>
                </div>

                @* Campo texto *@
                <div class="form-group">
                    <label asp-for="Novedad.TextoExplicacion" class="control-label"> </label>
                    <input asp-for="Novedad.TextoExplicacion" class="form-control" />
                    <span asp-validation-for="Novedad.TextoExplicacion" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Novedad.Estado" class="control-label"></label>
                     <select asp-for="Novedad.Estado" class="form-control" >
                        <option value="">--Seleccione documento-- </option>
                        <option value="Habilitado">Habilitado</option>
                        <option value="Inhabilitado">Inhabilitado</option>
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary" />
                </div>

            </form>

        </div>
    </div>
    <div>
        <a asp-page="Index">Regresar a Novedades</a>
    </div>
</div>
@section Scripts{
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}