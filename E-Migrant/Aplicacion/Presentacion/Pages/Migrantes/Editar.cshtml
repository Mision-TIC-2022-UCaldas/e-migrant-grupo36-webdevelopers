@page
@model Presentacion.Pages.Migrantes.EditarModel
@{ViewData["Title"]="Editar Migrante";
}

<h1>Editar </h1>
<h4>Migrante</h4>

<div class="form-horizontal">
        
        <hr />
        
        <div class="row">
           <div class="col-md-4">
               <form method="post">
                  
                   <input type="hidden" asp-for="Migrante.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
                   <div class="form-group">
                       <label asp-for="Migrante.Nombres" class="control-label"> </label>
                       <input asp-for="Migrante.Nombres"  class="form-control" />   
                       <span asp-validation-for="Migrante.Nombres" class="text-danger" > </span>                       
                   </div>
                   <div class="form-group">
                       <label asp-for="Migrante.Apellidos" class="control-label"> </label>
                       <input asp-for="Migrante.Apellidos"  class="form-control" />   
                       <span asp-validation-for="Migrante.Apellidos" class="text-danger" > </span>                       
                   </div>

               
                    <div class="form-group">  
                    <label asp-for="Migrante.TipoDocumento" class="control-label">  </label>
                    <select asp-for="Migrante.TipoDocumento" class="form-control"> 
                        
                        <option value="Pasaporte">Pasaporte</option>
                        <option value="Cédula de extranjería">Cédula de extranjería</option>
                        <option value="Cédula de ciudadanía">Cédula de ciudadanía</option>
                        <option value="Tarjeta de identidad">Tarjeta de identidad</option>
                        <option value="Registro civil de nacimiento">Registro civil de nacimiento</option>
                        <option value="Indocumentado">Indocumentado</option>
                        
                    </select>  

                                  
                    <div class="form-group">
                       <label asp-for="Migrante.Documento" class="control-label"> </label>
                       <input asp-for="Migrante.Documento"  class="form-control" />   
                       <span asp-validation-for="Migrante.Documento" class="text-danger" > </span>                       
                   </div>

                  
                   <div class="form-group">
                       <label asp-for="Migrante.PaisOrigen" class="control-label"> </label>
                       <input asp-for="Migrante.PaisOrigen"  class="form-control" />   
                       <span asp-validation-for="Migrante.PaisOrigen" class="text-danger" > </span>                       
                   </div>
                   

                   <div class="form-group">
                       <label asp-for="Migrante.FechaNacimiento" class="control-label"> </label>
                       <input asp-for="Migrante.FechaNacimiento"  class="form-control" />   
                       <span asp-validation-for="Migrante.FechaNacimiento" class="text-danger" > </span>                       
                   </div>

                    <div class="form-group">   
                    <label asp-for="Migrante.CorreoElectronico" class="control-label">  </label>
                    <input asp-for="Migrante.CorreoElectronico" class="form-control"/>
                    <span asp-validation-for="Migrante.CorreoElectronico" class="text-danger"></span>
                    </div>

                     <div class="form-group">   
                    <label asp-for="Migrante.Telefono" class="control-label">  </label>
                    <input asp-for="Migrante.Telefono" class="form-control"/>
                    <span asp-validation-for="Migrante.Telefono" class="text-danger"></span>
                    </div>

                     <div class="form-group">   
                    <label asp-for="Migrante.DireccionActual" class="control-label">  </label>
                    <input asp-for="Migrante.DireccionActual" class="form-control"/>
                    <span asp-validation-for="Migrante.DireccionActual" class="text-danger"></span>
                    </div>

                     <div class="form-group">   
                    <label asp-for="Migrante.Ciudad" class="control-label">  </label>
                    <input asp-for="Migrante.Ciudad" class="form-control"/>
                    <span asp-validation-for="Migrante.Ciudad" class="text-danger"></span>
                    </div>

                   <div class="form-group">                       
                       <input type="submit" value="Editar" class="btn btn-primary"/>                       
                   </div>
               </form>
           </div>
        </div>

        <div>
            <a asp-page="Index">Regresar a Migrantes</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
